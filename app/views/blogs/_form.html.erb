<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, disabled: true %>
  </div>

  <div class="form-inputs">
    <%= f.input :url, readonly: true,hint: 'Working on making it editable to use custom urls.' %>
  </div>

  <div class="form-inputs">
    <%= f.input :description, as: :text %>
  </div>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <div class="form-inputs">
    <%= f.input :twitter, hint: 'Your twitter username' %>
  </div>

  <div class="form-inputs">
    <%= f.input :about ,as: :text,input_html: { id: 'about_box' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


