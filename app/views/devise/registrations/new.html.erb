<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal" ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, hint: 'username should only contain characters' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <div class="g-recaptcha" data-sitekey="6Lf6NR4UAAAAANwGH0cWKfqN1swuBRQerkaXNa2F"></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", data: { disable_with: "This may take upto 2 minutes... "} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
